<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/code_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="130dp"
        android:text="Введите код из E-mail"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/timer_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:gravity="center"
        android:layout_marginBottom="413dp"
        android:onClick="renewTimer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <EditText
        android:id="@+id/code_input_3"
        android:gravity="center"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="220dp"
        android:layout_weight="1"
        android:background="@drawable/styleinput"
        android:digits="0123456789"
        android:inputType="number"
        android:onClick="start"
        android:maxLength="1"
        android:maxEms="1"
        app:layout_constraintStart_toEndOf="@+id/code_input_2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/code_input_1"
        android:gravity="center"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="220dp"
        android:layout_weight="1"
        android:background="@drawable/styleinput"
        android:digits="0123456789"
        android:inputType="number"
        android:maxLength="1"
        android:maxEms="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/code_input_2"
        android:gravity="center"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="220dp"
        android:layout_weight="1"
        android:background="@drawable/styleinput"
        android:digits="0123456789"
        android:inputType="number"
        android:maxLength="1"
        android:maxEms="1"
        app:layout_constraintStart_toEndOf="@+id/code_input_1"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/code_input_4"
        android:layout_width="48dp"
        android:gravity="center"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="85dp"
        android:layout_weight="1"
        android:background="@drawable/styleinput"
        android:digits="0123456789"
        android:inputType="number"
        android:maxLength="1"
        android:maxEms="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/code_input_3"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>